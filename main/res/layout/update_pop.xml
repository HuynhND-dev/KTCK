<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3F51B5"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Chi tiết cập nhật"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="Điện thoại"
        android:textColor="#FDFDFD"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edt_tenmonan"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:background="@drawable/reunded"
        android:ellipsize="end"
        android:lines="1"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="Hãng"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edt_giamonan"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:background="@drawable/reunded"
        android:ellipsize="end"
        android:lines="1"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="Mô tả"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edt_motamonan"
        android:layout_width="377dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:background="@drawable/reunded"
        android:ellipsize="end"
        android:lines="1"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:lines="1"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="Link Ảnh"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edt_linkanh"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:background="@drawable/reunded"
        android:ellipsize="end"
        android:lines="1"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_update"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/reunded"
        android:backgroundTint="#3F51B5"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Cập nhật"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button

        android:id="@+id/btn_trove"
        android:layout_width="3dp"
        android:layout_height="1dp"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"
        android:background="@drawable/reunded"
        android:backgroundTint="#E91E63"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Trở về"
        android:textColor="#EFF2F3"
        android:textSize="20dp"
        android:textStyle="bold">

    </Button>
</LinearLayout>