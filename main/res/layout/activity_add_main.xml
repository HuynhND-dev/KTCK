<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".Add_MainActivity"
    android:layout_height="match_parent"
    android:background="@drawable/a22">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3F51B5"
        android:gravity="left"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="  THÊM MỚI"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:gravity="left"
        android:layout_marginLeft="10dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:text="Điện thoại"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edt_tencauthu"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:lines="1"
        android:paddingLeft="14dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColor="@color/black"
        android:textSize="22dp"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <TextView
        android:text="Hãng"
        android:textSize="20dp"
        android:gravity="left"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:layout_marginLeft="10dp"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edt_giacauthu"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:lines="1"
        android:paddingLeft="14dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="22dp"
        android:textColor="@color/black"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
    <TextView
        android:text="Mô tả"
        android:textSize="20dp"
        android:gravity="left"
        android:paddingTop="14dp"
        android:layout_marginLeft="10dp"
        android:paddingBottom="14dp"
        android:textColor="#FFFEFE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edt_motacauthu"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:lines="1"
        android:paddingLeft="14dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="22dp"
        android:textColor="@color/black"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
    <TextView
        android:text="Hình Ảnh"
        android:textSize="20dp"
        android:lines="1"
        android:gravity="left"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:layout_marginLeft="10dp"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edt_linkanh"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:lines="1"
        android:paddingLeft="14dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="22dp"
        android:textColor="@color/black"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_save"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="26dp"
        android:background="@drawable/reunded"
        android:backgroundTint="#3F51B5"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Lưu"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_back"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_gravity="left"
        android:layout_marginTop="26dp"
        android:background="@drawable/reunded"
        android:backgroundTint="#3F51B5"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        android:textStyle="bold" />
</LinearLayout>